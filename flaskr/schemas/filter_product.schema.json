{
    "$id": "http://json-schema.org/draft-07/schema#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "FilterSearch",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "q": {
            "type": "string",
            "description": "Search query"
        },
        "limit": {
            "type": "string",
            "description": "Number of products to send back"
        },
        "order": {
            "typde": "string",
            "description": "Order price descending or ascending"
        },
        "page": {
            "type": "string",
            "description": "Offset"
        },
        "category": {
            "type": "string",
            "description": "Product ID of the cart line"
        },
        "brand": {
            "type": "number",
            "minProperties": 1
        }
    }
}